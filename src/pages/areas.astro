---
import Layout from "../layouts/Layout.astro";
import CtaBanner from "../components/CtaBanner.astro";
import { siteConfig } from "../site.config";

const areas = [
  { name: "Manchester City Centre", description: "Providing emergency and scheduled plumbing services to Manchester City Centre and surrounding neighbourhoods." },
  { name: "Didsbury", description: "Providing emergency and scheduled plumbing services to Didsbury and surrounding neighbourhoods." },
  { name: "Chorlton", description: "Providing emergency and scheduled plumbing services to Chorlton and surrounding neighbourhoods." },
  { name: "Salford", description: "Providing emergency and scheduled plumbing services to Salford and surrounding neighbourhoods." },
  { name: "Stockport", description: "Providing emergency and scheduled plumbing services to Stockport and surrounding neighbourhoods." },
  { name: "Altrincham", description: "Providing emergency and scheduled plumbing services to Altrincham and surrounding neighbourhoods." },
  { name: "Stretford", description: "Providing emergency and scheduled plumbing services to Stretford and surrounding neighbourhoods." },
  { name: "Trafford", description: "Providing emergency and scheduled plumbing services to Trafford and surrounding neighbourhoods." },
  { name: "Rochdale", description: "Providing emergency and scheduled plumbing services to Rochdale and surrounding neighbourhoods." },
  { name: "Oldham", description: "Providing emergency and scheduled plumbing services to Oldham and surrounding neighbourhoods." },
  { name: "Bolton", description: "Providing emergency and scheduled plumbing services to Bolton and surrounding neighbourhoods." },
  { name: "Bury", description: "Providing emergency and scheduled plumbing services to Bury and surrounding neighbourhoods." },
];
---

<Layout title="Areas We Cover" description="Plumbing services across Greater Manchester including Didsbury, Chorlton, Salford, Stockport, Altrincham, Trafford, Bolton and more.">

  <!-- Hero Banner -->
  <section class="relative flex min-h-[40vh] items-center justify-center overflow-hidden">
    <div class="absolute inset-0" style="background: #070f1a;" aria-hidden="true">
      <div class="absolute inset-0" style="background:
        radial-gradient(ellipse 70% 60% at 50% -5%, rgba(27,77,142,0.7), transparent 70%),
        radial-gradient(ellipse 50% 35% at 50% 0%, rgba(27,77,142,0.4), transparent 60%),
        radial-gradient(ellipse 40% 30% at 80% 110%, rgba(27,77,142,0.2), transparent),
        linear-gradient(180deg, #0a1628 0%, #0d1f35 50%, #0a1628 100%);">
      </div>
      <div class="absolute inset-0 opacity-[0.03]" style="background-image:
        linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px);
        background-size: 48px 48px;">
      </div>
    </div>

    <div class="relative z-10 mx-auto max-w-4xl px-4 py-20 text-center sm:px-6 lg:px-8">
      <nav class="mb-6 text-sm text-blue-200/60" aria-label="Breadcrumb">
        <ol class="flex items-center justify-center gap-2">
          <li><a href="/" class="transition-all duration-300 hover:text-white">Home</a></li>
          <li aria-hidden="true">&rsaquo;</li>
          <li class="text-white font-medium">Areas</li>
        </ol>
      </nav>

      <div class="mx-auto mb-8 h-1 w-20 rounded-full bg-brand-secondary"></div>
      <h1 class="text-4xl font-extrabold tracking-tight leading-[1.1] text-white sm:text-5xl md:text-6xl">
        Areas We Cover
      </h1>
      <p class="mt-5 text-lg leading-relaxed text-blue-200/80 sm:text-xl">
        Smith Plumbing provides professional plumbing services across Greater Manchester and surrounding areas. Wherever you are, our team can be with you quickly.
      </p>
    </div>
  </section>

  <!-- Area Cards Grid -->
  <section class="bg-white py-20 sm:py-28">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-brand-dark sm:text-4xl">Greater Manchester</h2>
        <div class="mx-auto mt-4 h-1 w-12 rounded-full bg-brand-secondary"></div>
      </div>

      <div class="mt-14 grid gap-6 sm:grid-cols-2 lg:grid-cols-3 sm:gap-8">
        {areas.map((area) => (
          <a href="/services" class="group rounded-xl border-t-[3px] border-brand-primary bg-white p-8 shadow-sm transition-all duration-300 hover:-translate-y-1.5 hover:shadow-xl sm:p-10">
            <div class="mb-5 flex h-14 w-14 items-center justify-center rounded-full bg-brand-light text-brand-primary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
            </div>
            <h3 class="text-lg font-bold text-brand-dark">{area.name}</h3>
            <p class="mt-3 text-sm leading-relaxed text-gray-600">
              {area.description}
            </p>
            <span class="mt-5 inline-flex items-center gap-1 text-sm font-semibold text-brand-primary transition-all duration-300 group-hover:text-brand-secondary">
              View Services <span class="transition-transform duration-300 group-hover:translate-x-1">&rarr;</span>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Not Listed Here? -->
  <section class="bg-brand-light py-20 sm:py-28">
    <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:px-8">
      <div class="mx-auto mb-5 flex h-16 w-16 items-center justify-center rounded-full bg-brand-primary text-white shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4"/><path d="M12 8h.01"/></svg>
      </div>
      <h2 class="text-3xl font-extrabold text-brand-dark sm:text-4xl">Not Listed Here?</h2>
      <div class="mx-auto mt-4 h-1 w-12 rounded-full bg-brand-secondary"></div>
      <p class="mt-6 text-lg leading-relaxed text-gray-600">
        We cover all of Greater Manchester and regularly work in areas beyond those listed above. If you're unsure whether we serve your location, just give us a call or drop us a message â€” chances are we can help.
      </p>
      <div class="mt-8 flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
        <a
          href={`tel:${siteConfig.phone.replace(/\s/g, "")}`}
          class="group inline-flex w-full items-center justify-center gap-2.5 rounded-lg bg-brand-primary px-8 py-4 text-base font-bold text-white shadow-sm transition-all duration-300 hover:bg-brand-dark hover:shadow-md hover:-translate-y-0.5 sm:w-auto"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform group-hover:scale-110" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          Call {siteConfig.phone}
        </a>
        <a
          href="/contact"
          class="inline-flex w-full items-center justify-center rounded-lg border-2 border-brand-primary/30 px-8 py-4 text-base font-semibold text-brand-primary transition-all duration-300 hover:border-brand-primary hover:bg-brand-primary/5 sm:w-auto"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Banner -->
  <CtaBanner />

</Layout>
