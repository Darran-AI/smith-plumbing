---
import { siteConfig } from "../site.config";
---

<section class="relative overflow-hidden bg-brand-dark py-24 sm:py-32" style="clip-path: polygon(0 4vw, 100% 0, 100% 100%, 0 100%);">
  <!-- Background pattern & gradient -->
  <div class="absolute inset-0" aria-hidden="true">
    <div class="absolute inset-0" style="background:
      radial-gradient(ellipse 70% 50% at 50% -10%, rgba(27,77,142,0.5), transparent),
      radial-gradient(ellipse 50% 40% at 80% 120%, rgba(27,77,142,0.3), transparent),
      radial-gradient(circle at 15% 50%, rgba(232,163,23,0.06), transparent 50%),
      linear-gradient(180deg, #0F2B4C 0%, #0a1e38 100%);">
    </div>
    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image:
      linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px);
      background-size: 48px 48px;">
    </div>
    <!-- Dot pattern overlay -->
    <div class="absolute inset-0 opacity-[0.04]" style="background-image:
      radial-gradient(circle, rgba(255,255,255,0.5) 1px, transparent 1px);
      background-size: 24px 24px;">
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 mx-auto max-w-3xl px-4 pt-8 text-center sm:px-6 sm:pt-4 lg:px-8">
    <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl md:text-5xl">
      Need a Plumber? We're Ready to Help.
    </h2>
    <p class="mx-auto mt-5 max-w-xl text-lg leading-relaxed text-blue-200/80 sm:mt-6 sm:text-xl">
      Available 24/7 for emergencies. Free quotes on all work.
    </p>

    <div class="mt-10 flex flex-col items-center gap-4 sm:mt-12 sm:flex-row sm:justify-center">
      <a
        href={`tel:${siteConfig.phone.replace(/\s/g, "")}`}
        class="group inline-flex w-full items-center justify-center gap-2.5 rounded-lg bg-white px-8 py-4 text-base font-bold text-brand-dark shadow-lg shadow-white/10 transition-all duration-300 hover:bg-gray-50 hover:shadow-xl hover:shadow-white/20 hover:-translate-y-0.5 sm:w-auto sm:text-lg"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-brand-secondary transition-transform duration-300 group-hover:scale-110" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
        Call {siteConfig.phone}
      </a>
      <a
        href="/contact"
        class="inline-flex w-full items-center justify-center rounded-lg border-2 border-white/25 px-8 py-4 text-base font-semibold text-white transition-all duration-300 hover:border-white/60 hover:bg-white/10 hover:-translate-y-0.5 sm:w-auto sm:text-lg"
      >
        Request a Quote
      </a>
    </div>
  </div>
</section>
