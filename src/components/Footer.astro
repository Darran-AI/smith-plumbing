---
import { siteConfig } from "../site.config";
const year = new Date().getFullYear();
---

<footer class="bg-brand-dark text-gray-300">
  <!-- Accent line -->
  <div class="h-1 bg-brand-secondary"></div>

  <div class="mx-auto max-w-7xl px-4 py-14 sm:px-6 sm:py-16 lg:px-8">
    <div class="grid gap-10 sm:grid-cols-2 sm:gap-12 lg:grid-cols-3 lg:gap-16">
      <!-- Business Info -->
      <div>
        <h3 class="text-lg font-bold text-white">{siteConfig.name}</h3>
        <p class="mt-3 text-sm leading-relaxed">{siteConfig.tagline}</p>
        <address class="mt-5 space-y-2.5 text-sm not-italic">
          <p>{siteConfig.address.full}</p>
          <p>
            <a
              href={`tel:${siteConfig.phone.replace(/\s/g, "")}`}
              class="transition-all duration-300 hover:text-brand-secondary"
            >
              {siteConfig.phone}
            </a>
          </p>
          <p>
            <a
              href={`mailto:${siteConfig.email}`}
              class="transition-all duration-300 hover:text-brand-secondary"
            >
              {siteConfig.email}
            </a>
          </p>
        </address>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold text-white">Quick Links</h3>
        <nav class="mt-5 flex flex-col gap-3" aria-label="Footer">
          {siteConfig.nav.map((link) => (
            <a
              href={link.href}
              class="text-sm transition-all duration-300 hover:text-brand-secondary"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Call to Action -->
      <div>
        <h3 class="text-lg font-bold text-white">Need a Plumber?</h3>
        <p class="mt-3 text-sm leading-relaxed">
          Available for emergency call-outs across Manchester. Don't hesitate to
          get in touch.
        </p>
        <a
          href={`tel:${siteConfig.phone.replace(/\s/g, "")}`}
          class="group mt-6 inline-flex items-center gap-2 rounded-lg bg-brand-secondary px-6 py-3 text-sm font-bold text-white shadow-md shadow-brand-secondary/20 transition-all duration-300 hover:bg-amber-600 hover:shadow-lg hover:-translate-y-0.5"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform duration-300 group-hover:scale-110" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          Call Us Now
        </a>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 border-t border-gray-700 pt-8 text-center text-xs text-gray-400">
      <p>&copy; {year} {siteConfig.name}. All rights reserved.</p>
    </div>
  </div>
</footer>
