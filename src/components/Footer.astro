---
import { siteConfig } from "../site.config";
const year = new Date().getFullYear();
---

<footer class="bg-brand-dark text-gray-300">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Business Info -->
      <div>
        <h3 class="text-lg font-bold text-white">{siteConfig.name}</h3>
        <p class="mt-2 text-sm">{siteConfig.tagline}</p>
        <address class="mt-4 space-y-2 text-sm not-italic">
          <p>{siteConfig.address.full}</p>
          <p>
            <a
              href={`tel:${siteConfig.phone.replace(/\s/g, "")}`}
              class="transition-colors hover:text-brand-secondary"
            >
              {siteConfig.phone}
            </a>
          </p>
          <p>
            <a
              href={`mailto:${siteConfig.email}`}
              class="transition-colors hover:text-brand-secondary"
            >
              {siteConfig.email}
            </a>
          </p>
        </address>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold text-white">Quick Links</h3>
        <nav class="mt-4 flex flex-col gap-2" aria-label="Footer">
          {siteConfig.nav.map((link) => (
            <a
              href={link.href}
              class="text-sm transition-colors hover:text-brand-secondary"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Call to Action -->
      <div>
        <h3 class="text-lg font-bold text-white">Need a Plumber?</h3>
        <p class="mt-2 text-sm">
          Available for emergency call-outs across Manchester. Don't hesitate to
          get in touch.
        </p>
        <a
          href={`tel:${siteConfig.phone.replace(/\s/g, "")}`}
          class="mt-4 inline-flex items-center gap-2 rounded-lg bg-brand-secondary px-5 py-2.5 text-sm font-semibold text-white transition-colors hover:bg-amber-600"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          Call Us Now
        </a>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-10 border-t border-gray-700 pt-6 text-center text-xs text-gray-400">
      <p>&copy; {year} {siteConfig.name}. All rights reserved.</p>
    </div>
  </div>
</footer>
